<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista list (Lista) -->
    <record id="view_persona_list" model="ir.ui.view">
        <field name="name">icanh.persona.list</field>
        <field name="model">icanh.persona</field>
        <field name="arch" type="xml">
            <list string="Personas" decoration-info="vehiculo_count > 0">
                <field name="nombre"/>
                <field name="cedula"/>
                <field name="vehiculo_count" widget="statinfo" string="Vehículos"/>
            </list>
        </field>
    </record>

    <!-- Vista Form -->
    <record id="view_persona_form" model="ir.ui.view">
        <field name="name">icanh.persona.form</field>
        <field name="model">icanh.persona</field>
        <field name="arch" type="xml">
            <form string="Persona">
                <sheet>
                    <group>
                        <group>
                            <field name="nombre"/>
                            <field name="cedula"/>
                        </group>
                        <group>
                            <field name="vehiculo_count" widget="statinfo" string="Vehículos"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Vehículos Propios" name="vehiculos">
                            <field name="vehiculo_ids" nolabel="1">
                                <list>
                                    <field name="modelo"/>
                                    <field name="marca_id"/>
                                    <field name="numero_puertas"/>
                                    <field name="color"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Kanban -->
    <record id="view_persona_kanban" model="ir.ui.view">
        <field name="name">icanh.persona.kanban</field>
        <field name="model">icanh.persona</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="nombre"/>
                <field name="cedula"/>
                <field name="vehiculo_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="nombre"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <i class="fa fa-id-card"/> <field name="cedula"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-car"/> <field name="vehiculo_count"/> Vehículos
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista Search -->
    <record id="view_persona_search" model="ir.ui.view">
        <field name="name">icanh.persona.search</field>
        <field name="model">icanh.persona</field>
        <field name="arch" type="xml">
            <search string="Buscar Personas">
                <field name="nombre" string="Nombre"/>
                <field name="cedula" string="Cédula"/>
            </search>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_persona" model="ir.actions.act_window">
        <field name="name">Personas</field>
        <field name="res_model">icanh.persona</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primera persona
            </p>
            <p>
                Las personas pueden ser propietarias de uno o más vehículos.
            </p>
        </field>
    </record>
</odoo>

