<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista list (Lista) -->
    <record id="view_marca_vehiculo_list" model="ir.ui.view">
        <field name="name">icanh.marca.vehiculo.list</field>
        <field name="model">icanh.marca.vehiculo</field>
        <field name="arch" type="xml">
            <list string="Marcas de Vehículos" decoration-info="vehiculo_count > 0">
                <field name="nombre_marca"/>
                <field name="pais"/>
                <field name="vehiculo_count" widget="statinfo" string="Vehículos"/>
            </list>
        </field>
    </record>

    <!-- Vista Form -->
    <record id="view_marca_vehiculo_form" model="ir.ui.view">
        <field name="name">icanh.marca.vehiculo.form</field>
        <field name="model">icanh.marca.vehiculo</field>
        <field name="arch" type="xml">
            <form string="Marca de Vehículo">
                <sheet>
                    <group>
                        <group>
                            <field name="nombre_marca"/>
                            <field name="pais"/>
                        </group>
                        <group>
                            <field name="vehiculo_count" widget="statinfo" string="Vehículos"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Vehículos" name="vehiculos">
                            <field name="vehiculo_ids" nolabel="1">
                                <list>
                                    <field name="modelo"/>
                                    <field name="numero_puertas"/>
                                    <field name="color"/>
                                    <field name="propietario_count" widget="statinfo" string="Propietarios"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Kanban -->
    <record id="view_marca_vehiculo_kanban" model="ir.ui.view">
        <field name="name">icanh.marca.vehiculo.kanban</field>
        <field name="model">icanh.marca.vehiculo</field>
        <field name="arch" type="xml">
            <kanban default_group_by="pais" class="o_kanban_small_column">
                <field name="nombre_marca"/>
                <field name="pais"/>
                <field name="vehiculo_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="nombre_marca"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <i class="fa fa-globe"/> <field name="pais"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-car"/> <field name="vehiculo_count"/> Vehículos
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista Search -->
    <record id="view_marca_vehiculo_search" model="ir.ui.view">
        <field name="name">icanh.marca.vehiculo.search</field>
        <field name="model">icanh.marca.vehiculo</field>
        <field name="arch" type="xml">
            <search string="Buscar Marcas">
                <field name="nombre_marca" string="Nombre"/>
                <field name="pais" string="País"/>
            </search>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_marca_vehiculo" model="ir.actions.act_window">
        <field name="name">Marcas de Vehículos</field>
        <field name="res_model">icanh.marca.vehiculo</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primera marca de vehículo
            </p>
            <p>
                Las marcas de vehículos representan los fabricantes de automóviles.
            </p>
        </field>
    </record>
</odoo>

